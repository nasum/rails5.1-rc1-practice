<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Books</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.title %></td>
        <td><%= review.content %></td>
        <td><%= link_to 'Show', book_review_path(review, book_id: review.book_id) %></td>
        <td><%= link_to 'Edit', edit_book_review_path(review, book_id: review.book_id) %></td>
        <td><%= link_to 'Destroy', book_review_path(review, book_id: review.book_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_book_review_path %>

<%= link_to 'back', book_path(@book) %>
